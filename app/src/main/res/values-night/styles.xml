<resources>
    <style name="AppThemeDefault" parent="AppThemeNoActionBarNight">
    </style>

    <style name="AppThemeColor" parent="AppThemeNight">
        <item name="android:statusBarColor">@color/cardBgDark</item>
        <item name="android:navigationBarColor">@color/cardBgDark</item>
        <item name="colorPrimary">?android:colorAccent</item>
        <item name="colorPrimaryDark">?android:colorAccent</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppThemeWallpaper" parent="AppThemeDefault">
        <item name="android:navigationBarColor">@color/cardBgDarkTransparent</item>
        <item name="android:statusBarColor">@color/cardBgDarkTransparent</item>
        <item name="cardBg">@color/cardBgDarkTransparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppThemeBlue" parent="AppThemeColor">
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/blueLight</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
    </style>

    <style name="AppThemeCyan" parent="AppThemeColor">
        <item name="colorAccent">@color/cyan</item>
        <item name="colorPrimary">@color/cyanLight</item>
        <item name="colorPrimaryDark">@color/cyanDark</item>
    </style>

    <style name="AppThemeGreen" parent="AppThemeColor">
        <item name="colorAccent">@color/color_load_mid</item>
        <item name="colorPrimary">@color/greenLight</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
    </style>

    <style name="AppThemeOrange" parent="AppThemeColor">
        <item name="colorAccent">@color/color_load_hight</item>
        <item name="colorPrimary">@color/orangeLight</item>
        <item name="colorPrimaryDark">@color/orangeDark</item>
    </style>

    <style name="AppThemeRed" parent="AppThemeColor">
        <item name="colorAccent">@color/newYearAccent</item>
        <item name="colorPrimary">@color/newYearLight</item>
        <item name="colorPrimaryDark">@color/newYearDark</item>
    </style>

    <style name="AppThemePink" parent="AppThemeColor">
        <item name="colorAccent">@color/pink</item>
        <item name="colorPrimary">@color/pinkLight</item>
        <item name="colorPrimaryDark">@color/pinkDark</item>
    </style>

    <style name="AppThemePretty" parent="AppThemeColor">
        <item name="colorAccent">@color/pretty</item>
        <item name="colorPrimary">@color/prettyLight</item>
        <item name="colorPrimaryDark">@color/prettyDark</item>
    </style>

    <style name="AppThemeViolet" parent="AppThemeColor">
        <item name="colorAccent">@color/violet</item>
        <item name="colorPrimary">@color/violetLight</item>
        <item name="colorPrimaryDark">@color/violetDark</item>
    </style>
</resources>
